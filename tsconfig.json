{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "preserve",
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@store/*": ["./packages/store/src/*"],
      "@components/*": ["./packages/site/src/components/*"],
      "@static/*": ["./packages/site/static/*"],
    },
    "typeRoots": [
      "typings",
      "node_modules/@types",
      "*/**/node_modules/@types",
    ]
  },
  "include": [
    "typings",
    "node_modules/@types",
    "*/**/node_modules/@types",
    "packages/**/src/**/*",
  ],
  "exclude": [
    "node_modules",
    "packages/site/public",
    "packages/site/.cache",
    "packages/app/__generated__",
    "*/**/node-modules",
    "*/**/src/**/__test__/**/*"
  ]
}

